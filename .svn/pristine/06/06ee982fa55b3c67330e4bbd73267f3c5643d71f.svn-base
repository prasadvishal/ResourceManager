<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    card_view:cardCornerRadius="@dimen/four">

    <LinearLayout
        android:id="@+id/cardview_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/cardview_margin"
            android:layout_height="match_parent"
            android:background="@color/themeBlue" />


        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pending_req_res_type_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/admin_home_menu_icon_size"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/hardware_resource_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pending_req_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_textsize"
                android:gravity="start"
                android:hint="@string/request_title"
                android:paddingStart="@dimen/textfields_padding"
                android:textSize="@dimen/list_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pending_req_resource_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="@string/resource_name"
                android:padding="@dimen/textfields_padding"

                android:textSize="@dimen/list_text_size" />

            <TextView
                android:id="@+id/pending_req_requested_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:gravity="start"
                android:hint="@string/requested_by"
                android:paddingStart="@dimen/textfields_padding"
                android:textColor="@color/green"
                android:textSize="@dimen/list_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textfields_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/from_date"
                    android:textSize="@dimen/list_text_size" />

                <TextView
                    android:id="@+id/pending_req_from_date"
                    android:layout_width="@dimen/zero"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/date_format"
                    android:textSize="@dimen/list_text_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_text_size"
                    android:gravity="center"
                    android:text="@string/issued_till"
                    android:textSize="@dimen/list_text_size" />

                <TextView
                    android:id="@+id/pending_req_till_date"
                    android:layout_width="@dimen/zero"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_text_size"
                    android:gravity="center"
                    android:hint="@string/date_format"
                    android:textColor="@color/green"
                    android:textSize="@dimen/list_text_size" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>