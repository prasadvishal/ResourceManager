<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_software_resource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mindfiresolutions.resourcemanager.admin.AddNewSoftwareResourceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/enter_software_name"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/add_new_software_name"
            style="@style/BorderedTextFields"
            android:layout_width="match_parent"
            android:ems="10"
            android:hint="@string/enter_software_name"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/add_new_software_software_brand_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/brand"
            android:textColor="@color/blue" />


        <Spinner
            android:id="@+id/add_new_software_brand_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/enter_software_version"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/add_new_software_add_version"
            style="@style/BorderedTextFields"
            android:layout_width="match_parent"
            android:ems="10"
            android:hint="@string/enter_software_version"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/add_new_software_software_Licencee_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/licence_type"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/add_new_software_software_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/count"
                    android:textColor="@color/blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/add_new_software_licence_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/add_new_software_software_count_edttxt"
                    style="@style/BorderedTextFields"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/enter_licence_count"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/enter_licence_key"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/add_new_software_licence_key"
            style="@style/BorderedTextFields"
            android:layout_width="match_parent"
            android:ems="10"
            android:hint="@string/enter_licence_key"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/purchased_date"
                    android:textColor="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/valid_upto"
                    android:textColor="@color/blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/add_new_software_purchase_date"
                    style="@style/BorderedTextFields"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/purchased_date" />

                <TextView
                    android:id="@+id/add_new_software_valid_upt"
                    style="@style/BorderedTextFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/valid_upto" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/new_software_rqst_desc"
            style="@style/BorderedTextFields"
            android:layout_width="match_parent"
            android:layout_height="@dimen/resource_desc_height"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:hint="@string/optional_desc"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/UserFields"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/today_date"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/add_new_software_curnt_date"
                style="@style/UserFields"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/subheading"
                android:layout_marginStart="@dimen/subheading"
                android:layout_weight="2"
                android:gravity="center"
                android:hint="@string/date_format"
                android:textColor="@color/blue" />

        </LinearLayout>

        <Button
            android:id="@+id/add_new_software_add_software_button"
            style="@style/UserFields"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/button_layout"
            android:text="@string/add_software" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>