<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/activity_forgot_linear"
    android:layout_height="match_parent"
    android:background="@drawable/bg2_blur"
    android:padding="@dimen/layout_padding">

    <TextView
        android:id="@+id/txt_username_forgot_pswd"
        android:text="@string/enter_username"
        style="@style/UserFields" />

    <EditText
        android:id="@+id/edt_username_forgot_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:padding="@dimen/textfields_padding"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <Button
        android:id="@+id/forgot_password_continue"
        android:layout_width="wrap_content"
        android:text="@string/contnue_to_proceed"
        style="@style/UserFields"
        android:layout_marginTop="@dimen/layout_padding"
        android:layout_gravity="center"
        android:background="@drawable/button_layout"
         />

</LinearLayout>