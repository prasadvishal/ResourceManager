<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="@dimen/textfields_padding">

    <TextView
        android:id="@+id/add_new_software_license_dialog_txtView_brand"
        style="@style/HeaderFields"
        android:text="@string/prompt_new_licence_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/hint_license_type"
        android:ems="10"
        android:id="@+id/add_new_software_license_dialog_edttxt" />


    <Button
        android:text="@string/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/styled_blue_button_layout"
        android:id="@+id/add_new_software_license_dialog_btn" />


</LinearLayout>