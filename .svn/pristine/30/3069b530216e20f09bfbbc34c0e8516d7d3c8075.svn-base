<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/subheading"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/add_new_hardware_srvctag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/enter_srvc_tag"
            android:inputType="text"
            android:padding="@dimen/textfields_padding"
            android:textSize="@dimen/content_textsize" />

        <View
            android:layout_width="@dimen/one"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/four"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/service_tag_scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/four"
            android:background="@drawable/scan_image_button_background"
            android:src="@drawable/search_icon" />
    </LinearLayout>
    <TextView
        style="@style/HeaderFields"
        android:id="@+id/hardware_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/subheading"
        android:background="@color/themeBlue"
        android:hint="@string/type"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hardware_type_listview"></ListView>
    </LinearLayout>


</LinearLayout>