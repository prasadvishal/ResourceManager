<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_registration"
    android:layout_width="match_parent"
    android:paddingRight="20dp"
    app:paddingStart="20dp"
    android:paddingLeft="20dp"
    app:paddingEnd="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/RegistrationForm"
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_name"
            android:textAlignment="center"
            android:textColorHint="@color/hint_gray"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:maxLines="1"
            android:singleLine="true" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            android:textAlignment="center"
            android:textColorHint="@color/hint_gray"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_username"
            android:textAlignment="center"
            android:textColorHint="@color/hint_gray"
            android:inputType="text"
            android:textColor="@color/white"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/employeeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_employeeid"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true" />


        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:hint="@string/prompt_mobile"
            android:textAlignment="center"
            android:textColorHint="@color/hint_gray"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            android:textAlignment="center"
            android:textColorHint="@color/hint_gray"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/cnfrmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_cnfrmPswrd"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_gray"
            android:inputType="textPassword"
            android:maxLines="1" />


        <Button
            android:id="@+id/register"
            android:textColor="@color/white"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_layout"
            android:text="@string/action_sign_in"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false" />


    </LinearLayout>

</ScrollView>