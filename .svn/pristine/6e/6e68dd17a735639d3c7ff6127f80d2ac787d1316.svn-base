<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/four"
    android:layout_margin="@dimen/cardview_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardview_background">


        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/admin_home_menu_icon_size"
                android:layout_height="@dimen/admin_home_menu_icon_size"
                android:padding="@dimen/content_textsize"
                android:layout_gravity="center"
                android:id="@+id/user_my_req_res_type_icon"
                android:src="@drawable/hardware_resource_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type"
                android:id="@+id/user_my_req_res_type_lable"
                android:gravity="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_my_req_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_textsize"
                android:gravity="center"
                android:hint="@string/resource_name"
                android:padding="@dimen/textfields_padding"
                android:textSize="@dimen/subheading" />

            <TextView
                android:id="@+id/user_my_req_assigned_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_textsize"
                android:gravity="center"
                android:hint="@string/resource_name"
                android:padding="@dimen/textfields_padding"
                android:textColor="@color/green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_my_req_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_textsize"
                android:gravity="center"
                android:hint="@string/from_date"
                android:padding="@dimen/textfields_padding" />

            <TextView
                android:id="@+id/user_my_req_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/to_date"
                android:padding="@dimen/textfields_padding"
                android:textColor="@color/green" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>