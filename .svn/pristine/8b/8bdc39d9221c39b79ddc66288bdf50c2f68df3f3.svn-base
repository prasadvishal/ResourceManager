<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_request_detail"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context="com.mindfiresolutions.resourcemanager.user.userResource.UserRequestDetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textfields_padding"
        android:text="@string/device_info_category"
        android:gravity="center"
        android:background="@color/themeBlue"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_req_res_category"
        android:textSize="@dimen/heading"
        android:paddingBottom="@dimen/subheading"
        android:hint="@string/device_info_category"
        android:gravity="center"
        android:background="@color/themeBlue"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeBlue">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:text="@string/prompt_tittle"/>

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:id="@+id/user_req_res_title"
            android:gravity="start"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:hint="@string/prompt_tittle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeBlue">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:text="@string/requested_resource"/>
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/user_req_requested_dev"
            android:gravity="start"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:hint="@string/empty"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:text="@string/requested_to"/>
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/user_req_assigned_to"
            android:gravity="start"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:hint="@string/empty"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/subheading">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:text="@string/requested_by"/>
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/user_req_requested_by"
            android:gravity="start"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:hint="@string/empty"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:text="@string/request_status"/>
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/user_req_request_status"
            android:gravity="start"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:hint="@string/empty"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/subheading">
    <TextView
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:padding="@dimen/textfields_padding"
        android:text="@string/request_date"/>
    <TextView
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/user_req_request_date"
        android:gravity="start"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:padding="@dimen/textfields_padding"
        android:hint="@string/date_format"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:text="@string/issue_date"/>

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/user_req_request_till"
            android:gravity="start"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:hint="@string/date_format"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/subheading"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:padding="@dimen/textfields_padding"
            android:text="@string/description"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_tab_layout_height"
            android:background="@drawable/border"
            android:id="@+id/user_req_request_desc"
            android:gravity="center"
            android:singleLine="false"
            android:padding="@dimen/textfields_padding"
            android:hint="@string/empty"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_req_delete_button"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/styled_red_button_layout"
            android:padding="@dimen/subheading"
            android:text="@string/delete"
            android:textColor="@color/white"/>
    </LinearLayout>



</LinearLayout>