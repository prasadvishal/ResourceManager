<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/textfields_padding">

    <TextView
        android:id="@+id/add_new_software_dialog_txtView_brand"
        android:text="@string/brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/brand"
        android:ems="10"
        android:id="@+id/add_new_software_dialog_edttxt_brand" />
    <TextView
        android:id="@+id/add_new_software_dialog_txtView_desc"
        android:text="@string/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_new_software_dialog_edttxt_desc"
        android:hint="@string/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10" />

    <Button
        android:text="@string/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_new_software_add_button" />


</LinearLayout>