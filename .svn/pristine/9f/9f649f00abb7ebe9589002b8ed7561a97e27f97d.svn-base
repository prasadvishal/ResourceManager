<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2_blur">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="38dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/launcher_image_height"
        android:id="@+id/tittleImage"
        android:paddingLeft="@dimen/launcher_image_padding"
        android:paddingStart="@dimen/launcher_image_padding"
        android:paddingRight="@dimen/launcher_padding_right"
        android:paddingEnd="@dimen/launcher_padding_right"
        android:src="@drawable/resource_manager_logo"
        />
    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:orientation="vertical"
        android:layout_weight="0.42">

        <TextView
            android:id="@+id/tv_username"
            style="@style/UserFields"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/launcher_padding_bottom"
            android:text="@string/username"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/ed_username"
            style="@style/UserFields"
            android:cursorVisible="true"
            android:padding="@dimen/launcher_padding_right"
            android:gravity="start"
            android:drawableLeft="@drawable/username"
            android:drawableStart="@drawable/username"
            android:drawablePadding="@dimen/launcher_image_padding"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_password"
            style="@style/UserFields"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_height="@dimen/zero"
            android:layout_marginBottom="@dimen/launcher_padding_bottom"
            android:layout_marginTop="@dimen/launcher_padding_top"
            android:layout_weight="1"
            android:text="@string/password"
            android:textColor="@color/white" />

        <EditText

            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/launcher_padding_right"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/password"
            android:drawableStart="@drawable/password"
            android:drawablePadding="@dimen/launcher_image_padding"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:text="@string/show_password"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/login"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@drawable/styled_blue_button_layout"
            android:text="@string/action_login"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold" />


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/signup"
        android:layout_width="@dimen/rqst_desc_height"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/forgotPassword"
        android:layout_width="@dimen/rqst_desc_height"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:text="@string/forgotpassword"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>

</LinearLayout>
</ScrollView>