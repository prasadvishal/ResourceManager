<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/admin_home_menu"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="@dimen/admin_home_menu_icon_size"
        android:layout_height="@dimen/admin_home_menu_icon_size"
        android:id="@+id/admin_home_menu_icon"
        android:layout_weight="1"
        android:padding="@dimen/textfields_padding"
        android:src="@drawable/not_available"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/admin_home_menu_title"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/content_textsize"
            android:hint="@string/prompt_tittle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textfields_padding"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/admin_home_total_count_textview"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="@dimen/textfields_padding"
                android:paddingEnd="@dimen/textfields_padding"
                android:text="@string/total"
                android:textColor="@color/blue"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/admin_home_total_count"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="@dimen/textfields_padding"
                android:paddingStart="@dimen/textfields_padding"
                android:text="@string/total"
                android:textColor="@color/blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/admin_home_available_count_textview"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="@dimen/textfields_padding"
                android:paddingStart="@dimen/textfields_padding"
                android:text="@string/available"
                android:textColor="@color/green"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/admin_home_available_count"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="@dimen/textfields_padding"
                android:paddingStart="@dimen/textfields_padding"
                android:text="@string/total"
                android:textColor="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/admin_home_assigned_count_textview"
                android:layout_weight="1"
                android:paddingStart="@dimen/textfields_padding"
                android:paddingEnd="@dimen/textfields_padding"
                android:gravity="center"
                android:text="@string/assigned"
                android:textColor="@color/textRed"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/admin_home_assigned_count"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="@dimen/textfields_padding"
                android:paddingStart="@dimen/textfields_padding"
                android:text="@string/total"
                android:textColor="@color/textRed"/>
        </LinearLayout>
    </LinearLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_weight="2"
        android:padding="@dimen/textfields_padding"
        android:id="@+id/admin_home_menu_piechart">

    </com.github.mikephil.charting.charts.PieChart>

</LinearLayout>