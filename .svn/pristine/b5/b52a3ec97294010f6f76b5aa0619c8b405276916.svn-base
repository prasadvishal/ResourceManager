<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/themeBlue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/textfields_padding">

                <TextView
                    style="@style/UserFields"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/created_by" />

                <TextView
                    style="@style/UserFields"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/prompt_created_date"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/textfields_padding">

                <TextView
                    android:id="@+id/software_details_txt_created_admin_name"
                    style="@style/UserFields"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="@string/admin" />

                <TextView
                    android:id="@+id/software_details_txt_created_date"
                    style="@style/UserFields"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/date_format"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/software_details_txt_software_name"
            style="@style/UserFields"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/software_name"
            android:textAlignment="center"
            android:textColor="@color/themeBlue"
            android:textSize="@dimen/heading"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/software_version"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="@string/description"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/software_details_txt_software_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:hint="@string/optional_desc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/software_details_txt_product__version_image"
                    android:layout_width="@dimen/imageview_width"
                    android:layout_height="@dimen/imageview_width"
                    android:layout_margin="@dimen/software_version"
                    android:background="@drawable/product_version_textview"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/software_version"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/software_details_txt_product_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/negative_margin"
                    android:text="@string/product_version"
                    android:textAlignment="center"
                    android:textSize="@dimen/content_textsize"
                    android:textStyle="italic" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="1"
                    android:text="@string/licence_status"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/software_details_txt_license_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/subheading"
                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="1"
                    android:text="@string/active_expired"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/imageview_height"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="1"
                    android:text="@string/modified_by"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/software_details_txt_modified_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/subheading"
                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/imageview_height"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="1"
                    android:text="@string/modified_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/software_details_txt_modified_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/subheading"
                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="1"
                    android:text="@string/no_of_licenses"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/software_details_txt_no_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/subheading"
                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_textsize" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/software_detail_btn_delete"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@drawable/styled_red_button_layout"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/software_detail_btn_edit"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@drawable/styled_blue_button_layout"
                android:text="@string/edit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>