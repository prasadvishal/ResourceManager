    void setAddNewSoftwareResourceSetter(){
        addNewSoftwareResourceSetter.setCreatedBy(SharedPref.getSharedPreferences(this,NAMEKEY));
        addNewSoftwareResourceSetter.setDescription(mSoftwareDescription.getText().toString());
        addNewSoftwareResourceSetter.setVersion(mSoftwareVersion.getText().toString());
        addNewSoftwareResourceSetter.setSoftwareName(mSoftwareName.getText().toString());
        addNewSoftwareResourceSetter.setValidCount(Integer.parseInt(mSoftwareCount.getText().toString()));
        addNewSoftwareResourceSetter.setLicenseKeyValue(mSoftwareLicenceKey.getText().toString());
        addNewSoftwareResourceSetter.setPurchasedBy(adminList.get(mSelectAdminSpinner.getSelectedItemPosition()-1).getId());                    // -1 because we have explicitly added 'tap to select' string on index 0
        addNewSoftwareResourceSetter.setLicenseType(softwareLicenceList.get(mLicenceTypeSpinner.getSelectedItemPosition()-1).getID());
        addNewSoftwareResourceSetter.setValidUpto(mValidUptoDate.getText().toString());
        addNewSoftwareResourceSetter.setSoftwareBrand(softwareBrandList.get(mBrandDetailSpinner.getSelectedItemPosition()-1).getID());

        LoggerUtility.makeLog(TAG, "Created By : "+ addNewSoftwareResourceSetter.getCreatedBy());
        LoggerUtility.makeLog(TAG, "Description : "+ addNewSoftwareResourceSetter.getDescription());
        LoggerUtility.makeLog(TAG, "License Type : "+ addNewSoftwareResourceSetter.getLicenseType());
        LoggerUtility.makeLog(TAG, "Software Brand : "+ addNewSoftwareResourceSetter.getSoftwareBrand());
        LoggerUtility.makeLog(TAG, "Software Name : "+ addNewSoftwareResourceSetter.getSoftwareName());
        LoggerUtility.makeLog(TAG, "Version : "+ addNewSoftwareResourceSetter.getVersion());
        LoggerUtility.makeLog(TAG, "License Key Value : "+ addNewSoftwareResourceSetter.getLicenseKeyValue());
        LoggerUtility.makeLog(TAG, "Purchased Date : "+ addNewSoftwareResourceSetter.getPurchasedDate());
        LoggerUtility.makeLog(TAG, "Purchased By : "+ addNewSoftwareResourceSetter.getPurchasedBy());
        LoggerUtility.makeLog(TAG, "Valid upto : "+ addNewSoftwareResourceSetter.getValidUpto());
        if(mIsEditing){
            callEditSoftwareSetterApi();
        }
        else {
            callAddNewSoftwareSetterApi();
        }

    }

    void callAddNewSoftwareSetterApi(){
        final ProgressDialog progressDialog = new ProgressDialog(AddNewSoftwareResourceActivity.this);
        progressDialog.setMessage(getString(R.string.loading));
        progressDialog.show();
        progressDialog.setCancelable(false);
        progressDialog.setCanceledOnTouchOutside(false);
        final String token = SharedPref.getSharedPreferences(this, TOKEN);
        CallAPIInterface callAPIInterface = ServiceGenerator.createService(CallAPIInterface.class);
        LoggerUtility.makeLog(TAG, "Retrofit object created");
        Call<ResponseGetterBase> call = callAPIInterface.createNewSoftware(LOGIN_REQUEST_HEADER_VALUE, token, addNewSoftwareResourceSetter);
        LoggerUtility.makeLog(TAG, "response in call object");
        call.enqueue(new Callback<ResponseGetterBase>() {
                         @Override
                         public void onResponse(Call<ResponseGetterBase> call, Response<ResponseGetterBase> response) {
                             //response's body
                             LoggerUtility.makeLog(TAG, "Response body");
                             progressDialog.dismiss();
                             try {
                                 if (response.body().getCode() == OK) {
                                     LoggerUtility.makeShortToast(getApplicationContext(), response.body().getMessage());
                                 }
                             } catch (Exception e) {
                                 LoggerUtility.makeLongToast(getApplicationContext(), getString(R.string.error_requesting_api));
                             }
                             finally{
                                 Intent i = new Intent(getApplicationContext(), AdminHomeMainActivity.class);
                                 startActivity(i);
                             }
                         }

                         @Override
                         public void onFailure(Call<ResponseGetterBase> call, Throwable t) {
                             progressDialog.dismiss();
                             LoggerUtility.makeShortToast(getApplicationContext(), getString(R.string.server_error));
                             LoggerUtility.makeLog(TAG, "Error requesting API");
                         }
                     }
        );
    }

