<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2_blur"
    android:padding="30dp">

    <TextView
        android:id="@+id/txt_username_forgot_pswd"
        android:text="@string/enter_username"
        style="@style/UserFields" />

    <EditText
        android:id="@+id/edt_username_forgot_pswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:background="@color/white"
        android:ems="10"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/forgot_password_continue"
        android:layout_width="wrap_content"
        android:text="@string/contnue_to_proceed"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        style="@style/UserFields"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_layout"
         />

</LinearLayout>