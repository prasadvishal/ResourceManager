<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Software Name"
        android:id="@+id/software_name"
        android:layout_width="match_parent"
        style="@style/UserFields"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textColor="@color/themeBlue"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/heading"/>

    <TextView
        android:text="Manufacturer Name"
        android:id="@+id/software_manufracture_name"
        style="@style/UserFields"
        android:textColor="@color/themeBlue"
        android:textSize="@dimen/subheading"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1.7"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/product_version_textview"
            android:textSize="@dimen/software_version"
            android:layout_margin="@dimen/software_version"
            android:id="@+id/product_version" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_version"
                android:textSize="@dimen/content_textsize"
                android:layout_marginTop="-30sp"
                android:textStyle="italic"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2.1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/software_version"
            android:id="@+id/latest_version"
            android:background="@drawable/latest_version_textview"
            android:layout_margin="@dimen/software_version"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latest_version"
                android:textSize="@dimen/content_textsize"
                android:layout_marginTop="-30sp"
                android:textStyle="italic"
                android:textAlignment="center" />


            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                android:text="Platform"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                android:text="Windows"
                android:layout_marginLeft="@dimen/subheading"
                android:layout_marginStart="@dimen/subheading"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:text="License Status"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:text="Active/Expired"
            android:layout_marginLeft="@dimen/subheading"
            android:layout_marginStart="@dimen/subheading"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:text="No.of Licenses"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/subheading"
            android:layout_marginStart="@dimen/subheading"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:text="04"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    </LinearLayout>




</LinearLayout>