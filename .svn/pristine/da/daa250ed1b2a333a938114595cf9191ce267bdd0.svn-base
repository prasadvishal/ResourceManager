<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_software_resource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mindfiresolutions.resourcemanager.admin.AddNewSoftwareResourceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/propmt_software_name"
                    android:textColor="@color/blue" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/add_new_software_name"
                        style="@style/BorderedTextFields"
                        android:layout_width="match_parent"
                        android:hint="@string/enter_software_name"
                        android:inputType="textPersonName"
                        android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/add_new_software_software_brand_txtview"
                    android:layout_width="@dimen/zero"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/brand"
                    android:textColor="@color/blue" />

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:padding="@dimen/smaller_padding"
                    android:background="@drawable/border">

                <Spinner
                    android:id="@+id/add_new_software_brand_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_padding"
                    android:hint="@string/tap_to_select_brand"
                    />
              </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/prompt_software_version"
                    android:textColor="@color/blue" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="@dimen/zero"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/add_new_software_add_version"
                    style="@style/BorderedTextFields"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:hint="@string/enter_software_version"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_new_software_software_Licencee_txtview"
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/licence_type"
                        android:textColor="@color/blue" />
                    <LinearLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="@dimen/smaller_padding"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@drawable/border">
                    <Spinner
                        android:id="@+id/add_new_software_licence_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_padding"
                        android:hint="@string/hint_licence_type"
                         />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_new_software_software_Count"
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/count"
                        android:textColor="@color/blue" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="@dimen/zero"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/add_new_software_software_count_edttxt"
                        style="@style/BorderedTextFields"
                        android:layout_width="match_parent"
                        android:ems="10"
                        android:hint="@string/enter_licence_count"
                        android:inputType="textPersonName"
                        android:textAlignment="center" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/licence_key"
                android:textColor="@color/blue" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="@dimen/zero"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
            <EditText
                android:id="@+id/add_new_software_licence_key"
                style="@style/BorderedTextFields"
                android:layout_width="match_parent"
                android:ems="10"
                android:hint="@string/enter_licence_key"
                android:inputType="textPersonName"
                android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/purchased_date"
                        android:textColor="@color/blue" />

                    <TextView
                        android:id="@+id/add_new_software_purchase_date"
                        style="@style/BorderedTextFields"
                        android:layout_width="@dimen/zero"
                        android:layout_weight="2"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:padding="@dimen/textfields_padding"
                        android:text="@string/purchased_date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/valid_upto"
                        android:textColor="@color/blue" />


                    <TextView
                        android:id="@+id/add_new_software_valid_upt"
                        style="@style/BorderedTextFields"
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="center"
                        android:text="@string/valid_upto"
                        android:background="@drawable/border"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textColor="@color/blue"
                android:text="@string/purchased_by" />
                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/smaller_padding"
                    android:background="@drawable/border">
                <Spinner
                    android:id="@+id/admin_list_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tap_to_select"
                     />
                </LinearLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="@dimen/textfields_padding">
            <EditText
                android:id="@+id/new_software_rqst_desc"
                style="@style/BorderedTextFields"
                android:layout_width="match_parent"
                android:layout_height="@dimen/resource_desc_height"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:hint="@string/optional_desc"
                android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <TextView
                    style="@style/UserFields"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/added_on"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/add_new_software_curnt_date"
                    style="@style/UserFields"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/subheading"
                    android:layout_marginStart="@dimen/subheading"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:hint="@string/date_format"
                    android:textColor="@color/blue" />

            </LinearLayout>

            <Button
                android:id="@+id/add_new_software_add_software_button"
                style="@style/UserFields"
                android:layout_marginTop="@dimen/heading"
                android:background="@drawable/styled_blue_button_layout"
                android:text="@string/add_software" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>