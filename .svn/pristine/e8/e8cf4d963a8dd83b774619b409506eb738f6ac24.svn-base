<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="@dimen/four">

            <TextView
                android:id="@+id/hardware_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hardware_resource"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hardware_type_macid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/mcid"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/added_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/admin" />
        </LinearLayout>

        <TextView
            android:id="@+id/hardware_type_brand"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_textsize"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/brand"
            android:padding="@dimen/four" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="@color/themeBlue"></View>

</LinearLayout>