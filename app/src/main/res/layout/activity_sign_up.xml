<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_registration"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    app:paddingEnd="20dp"
    app:paddingStart="20dp">

    <LinearLayout
        android:id="@+id/RegistrationForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            style="@style/UserFields"
            android:hint="@string/prompt_username"
            android:inputType="text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/fname"
            style="@style/UserFields"
            android:hint="@string/prompt_fname"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/lname"
            style="@style/UserFields"
            android:hint="@string/prompt_lname"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/employeeId"
            style="@style/UserFields"
            android:hint="@string/prompt_employeeid"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/email"
            style="@style/UserFields"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />


        <EditText
            android:id="@+id/mobileNumber"
            style="@style/UserFields"
            android:hint="@string/prompt_mobile"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/password"
            style="@style/UserFields"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/cnfrmPassword"
            style="@style/UserFields"
            android:hint="@string/prompt_cnfrmPswrd"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/register_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:buttonTint="@color/white"
            android:text="@string/admin_registration"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/register"
            style="@style/UserFields"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/styled_blue_button_layout"
            android:text="@string/action_sign_in" />


    </LinearLayout>

</ScrollView>