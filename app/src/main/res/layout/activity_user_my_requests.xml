<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mindfiresolutions.resourcemanager.user.userResource.UserRequestsActivity">

    <TextView
        android:id="@+id/hardware_type_name"
        style="@style/HeaderFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeBlue"
        android:text="@string/prompt_my_requests"
        android:padding="@dimen/subheading" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_my_request_list_view"
        />

</LinearLayout>
