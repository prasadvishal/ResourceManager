<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/four"
    android:layout_margin="@dimen/cardview_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardview_background">


        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">
            <View
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/resource_availability_indicator">

            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hrdwr_type_summ_hardware_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_textsize"
                android:gravity="center"
                android:hint="@string/empty"
                android:textColorHint="@color/textRed"
                android:padding="@dimen/textfields_padding"
                android:textSize="@dimen/subheading" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/assigned_details">
                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/textfields_padding"
                    android:text="@string/assigning_to"
                    android:padding="@dimen/textfields_padding" />

                <TextView
                    android:id="@+id/hrdwr_type_summ_assigned_to"
                    android:layout_width="@dimen/zero"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="@dimen/textfields_padding"
                    android:hint="@string/empty"
                    android:textColorHint="@color/textRed"
                    android:padding="@dimen/textfields_padding"
                    android:textColor="@color/blue" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_textsize"
                android:gravity="center"
                android:hint="@string/macid"
                android:padding="@dimen/textfields_padding"
                android:layout_marginBottom="@dimen/textfields_padding"/>

            <TextView
                android:id="@+id/hrdwr_type_summ_srvc_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/empty"

                android:textColorHint="@color/textRed"
                android:padding="@dimen/textfields_padding"
                android:textColor="@color/blue" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>